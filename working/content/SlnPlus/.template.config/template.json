{
  "$schema": "http://json.schemastore.org/template",
  "author": "Daniel Carey",
  "classifications": [ "Solution" ],
  "identity": "DanielCarey.SlnPlus",
  "name": "DanielCarey.SlnPlus",
  "shortName": "slnplus",
  "tags": {
    "type": "solution"
  },
  "sources": [
    { "exclude": [ ".template.config/**/*", "install.ps1", "uninstall.ps1" ] }
  ],
  "symbols": {
    "framework": {
      "displayName": "Framework version",
      "type": "parameter",
      "description": "The target framework for the solution.",
      "defaultValue": "net8.0",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target net8.0"
        },
        {
          "choice": "net7.0",
          "description": "Target net7.0"
        },
        {
          "choice": "net6.0",
          "description": "Target net6.0"
        },
        {
          "choice": "net5.0",
          "description": "Target net5.0"
        },
        {
          "choice": "netcoreapp3.1",
          "description": "Target netcoreapp3.1"
        }
      ]
    },
    "sdk-version": {
      "displayName": "Sdk Version",
      "type": "parameter",
      "description": "The target sdk version.",
      "defaultValue": "8.0.302",
      "replaces": "TEMPLATE-SDK-VERSION",
      "datatype": "choice",
      "choices": [
        {
          "choice": "8.0.302",
          "description": "Target 8.0.302"
        },
        {
          "choice": "6.0.423",
          "description": "Target 6.0.423"
        },
        {
          "choice": "9.0.100-preview.5",
          "description": "Target 9.0.100-preview.5"
        }
      ]
    },
    "git-init": {
      "displayName": "Git Init",
      "type": "parameter",
      "description": "Initialize a git repository.",
      "defaultValue": "true",
      "datatype": "boolean"
    }
  },
  "sourceName": "Solution1",
  "primaryOutputs": [
    {
      "path": "Solution1.sln"
    }
  ],
  "defaultName": "Solution1",
  "postActions": [
    {
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "condition": "git-init",
      "description": "Initializes a git repository for the template",
      "manualInstructions": [
        {
          "text": "Run the following command"
        }
      ],
      "args": {
        "executable": "git",
        "args": "init && git add . && git commit -m 'Initial Project'"
      },
      "continueOnError": true
    }
  ]
}